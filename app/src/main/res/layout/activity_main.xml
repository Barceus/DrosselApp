<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/log_out"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonFaq"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="0dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/faq_icon" />

        <ImageButton
            android:id="@+id/imageButtonTicket"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="0dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/ticket_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonWasher"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/washer_icon" />

        <ImageButton
            android:id="@+id/imageButtonLocker"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/locker_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonBlackboard"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/blackboard_icon" />

        <ImageButton
            android:id="@+id/imageButtonCheckIn"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/checkin_icon" />

    </LinearLayout>

</LinearLayout>